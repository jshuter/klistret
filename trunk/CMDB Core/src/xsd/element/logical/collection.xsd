<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.klistret.com/cmdb/element/logical"
	xmlns:logical="http://www.klistret.com/cmdb/element/logical"
	xmlns:cmdb="http://www.klistret.com/cmdb" xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">
	<xs:import namespace="http://www.klistret.com/cmdb"
		schemaLocation="../../element.xsd" />

	<xs:complexType name="Collection">
		<annotation>
			<documentation>Abstract schema used to classify collections
				of configuration items (CIs), such as end-points, roles,
				organizations, subnets, systems, and users.</documentation>
		</annotation>
		<xs:complexContent>
			<xs:extension base="cmdb:Element" />
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="Collection" type="logical:Collection"
		abstract="true"></xs:element>
</schema>