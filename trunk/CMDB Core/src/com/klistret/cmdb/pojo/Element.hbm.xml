<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.klistret.cmdb.ci.pojo">

	<class name="Element" table="ELEMENT" entity-name="Element">

		<id name="id" type="long">
			<column name="ELEMENTID" sql-type="INTEGER" />
			<generator class="identity"></generator>
		</id>

		<many-to-one name="type" entity-name="ElementType" lazy="false"
			foreign-key="FK_TYPE_ELEMENT" index="ELEMENT_FK ELEMENT_SK">
			<column name="ELEMENTTYPEID" sql-type="INTEGER"
				not-null="true" />
		</many-to-one>

		<property name="name" index="ELEMENT_SK">
			<column name="NAME" length="100" not-null="true" />
		</property>

		<property name="fromTimeStamp" type="timestamp">
			<column name="FROMTIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="toTimeStamp" type="timestamp">
			<column name="TOTIMESTAMP" />
		</property>

		<property name="createId">
			<column name="CREATEID" length="10" />
		</property>

		<property name="createTimeStamp" type="timestamp">
			<column name="CREATETIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="updateTimeStamp" type="timestamp">
			<column name="UPDATETIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="configuration">
			<column name="CONFIGURATION" not-null="true" sql-type="XML" />
			<type
				name="com.klistret.cmdb.utility.hibernate.JAXBUserType">
				<param name="baseTypes">com.klistret.cmdb.ci.commons.Base</param>
				<param name="assignablePackages">
					com/klistret/cmdb/ci
				</param>
			</type>
		</property>

		<list name="sourceRelations" lazy="true" inverse="true"
			cascade="save-update" where="TOTIMESTAMP is null">
			<key column="SOURCEID" on-delete="noaction" not-null="true" />
			<index column="RELATIONID" />
			<one-to-many entity-name="Relation" />
		</list>

		<list name="destinationRelations" lazy="true" inverse="true"
			cascade="save-update" where="TOTIMESTAMP is null">
			<key column="DESTINATIONID" on-delete="noaction"
				not-null="true" />
			<index column="RELATIONID" />
			<one-to-many entity-name="Relation" />
		</list>
	</class>

</hibernate-mapping>