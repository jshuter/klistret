<project default="ci:create" xmlns:ivy="antlib:org.apache.ivy.ant">
	<taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant" />

	<!-- edit: properties are specific to local environment -->
	<property name="tmp-destdir" location="C:/temp/cmdb-ci" />
	<property name="project-basedir" location="C:/workshop/klistret/CMDB CI" />

	<property name="schema-basedir" location="${project-basedir}/src/xsd" />
	<property name="config-basedir" location="${project-basedir}/configuration" />
	<property name="bin-basedir" location="${project-basedir}/bin" />


	<ivy:settings file="C:/workshop/klistret/CMDB Core/ivysettings.xml" />
	<ivy:cachepath pathid="classpath.IVY" conf="compile" file="${project-basedir}/ivy.xml" type="jar" />

	<target name="xjc:plugin" description="Generate XJC extensions">
		<delete dir="${tmp-destdir}" failonerror="false" />
		<mkdir dir="${tmp-destdir}" />

		<javac srcdir="${project-basedir}/src" destdir="${tmp-destdir}" debug="on">
			<include name="com/klistret/cmdb/annotations/ci/*.java" />
			<include name="com/klistret/cmdb/utility/xjc/DateConverter.java" />
			<include name="com/klistret/cmdb/utility/xjc/ci/*.java" />
			<classpath>
				<path refid="classpath.IVY" />
			</classpath>
		</javac>

		<copy todir="${tmp-destdir}/META-INF">
			<fileset dir="${project-basedir}/src/META-INF" />
		</copy>

		<jar destfile="${tmp-destdir}/klistret.xjc-${ivy.revision}.jar">
			<fileset dir="${tmp-destdir}">
				<include name="com/klistret/cmdb/annotations/ci/*.class" />
				<include name="com/klistret/cmdb/utility/xjc/DateConverter.class" />
				<include name="com/klistret/cmdb/utility/xjc/ci/*.class" />
			</fileset>
			<fileset dir="${tmp-destdir}" includes="META-INF/services/com.sun.tools.xjc.Plugin" />
		</jar>
	</target>

	<!-- Creates the CI hierarchy -->
	<target name="ci:create" depends="xjc:plugin">
		<!-- Capture the path as a delimited property using the refid attribute -->
		<property name="myclasspath" refid="classpath.IVY" />
		<!-- Emit the property to the ant console -->
		<echo message="Classpath = ${myclasspath}" />

		<java classname="com.sun.tools.xjc.XJCFacade">
			<arg value="-extension" />
			<arg value="-d" />
			<arg value="${tmp-destdir}" />
			<arg value="-b" />
			<arg value="${config-basedir}/build/jaxb.binding.xml" />
			<arg value="${schema-basedir}/pojo.xsd" />
			<arg value="${schema-basedir}/commons.xsd" />
			<arg value="${schema-basedir}/xmlschemaNamespace.xsd" />
			<arg value="${schema-basedir}/element" />
			<arg value="${schema-basedir}/relation" />
			<arg value="-Xcollection-setter-injector" />
			<arg value="-Xinject-code" />
			<arg value="-Xci" />

			<classpath>
				<path refid="classpath.IVY" />
				<pathelement location="${tmp-destdir}/klistret.xjc-${ivy.revision}.jar" />
			</classpath>
		</java>

		<javac srcdir="${tmp-destdir}" destdir="${tmp-destdir}" debug="on">
			<include name="com/klistret/cmdb/annotations/ci/*.java" />
			<include name="com/klistret/cmdb/utility/xjc/DateConverter.java" />
			<include name="com/klistret/cmdb/ci/**/*.java" />
			<classpath>
				<path refid="classpath.IVY" />
			</classpath>
		</javac>

		<jar destfile="${tmp-destdir}/klistret.ci-${ivy.revision}.jar" basedir="${tmp-destdir}">
			<include name="com/klistret/cmdb/annotations/ci/*.class" />
			<include name="com/klistret/cmdb/utility/xjc/DateConverter.class" />
			<include name="com/klistret/cmdb/ci/**/*.class" />
		</jar>

	</target>

	<target name="ci:publish" depends="ci:create">
		<ivy:publish conf="master" revision="${ivy.revision}" resolver="localrepo" overwrite="true">
			<artifacts pattern="${tmp-destdir}/klistret.ci-[revision].[ext]" />
		</ivy:publish>
	</target>
</project>