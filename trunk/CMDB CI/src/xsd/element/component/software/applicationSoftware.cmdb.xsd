<xs:schema
	xmlns="http://www.klistret.com/cmdb/ci/element/component/software"
	targetNamespace="http://www.klistret.com/cmdb/ci/element/component/software"
	xmlns:component="http://www.klistret.com/cmdb/ci/element/component"
	xmlns:commons="http://www.klistret.com/cmdb/ci/commons"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xs:import namespace="http://www.klistret.com/cmdb/ci/commons"
		schemaLocation="../../commons.cmdb.xsd" />

	<xs:import
		namespace="http://www.klistret.com/cmdb/ci/element/component"
		schemaLocation="../software.cmdb.xsd" />

	<xs:complexType name="ApplicationSoftware">
		<xs:annotation>
			<xs:documentation>
				Application software, also known as an application or an
				"app", is computer software designed to help the user to
				perform singular or multiple related specific tasks. It
				helps to solve problems in the real world. Examples
				include enterprise software, accounting software, office
				suites, graphics software, and media players.
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="component:Software" />
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="ApplicationSoftware" type="ApplicationSoftware"></xs:element>
</xs:schema>