<xs:schema xmlns="http://www.klistret.com/cmdb/ci/element/component/software"
	targetNamespace="http://www.klistret.com/cmdb/ci/element/component/software"
	xmlns:component="http://www.klistret.com/cmdb/ci/element/component"
	xmlns:commons="http://www.klistret.com/cmdb/ci/commons"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xs:import namespace="http://www.klistret.com/cmdb/ci/commons"
		schemaLocation="../../commons.cmdb.xsd" />

	<xs:import namespace="http://www.klistret.com/cmdb/ci/element/component"
		schemaLocation="../software.cmdb.xsd" />

	<xs:complexType name="SystemSoftware">
		<xs:annotation>
			<xs:documentation>System software is computer software designed to operate the computer hardware and to provide and maintain a platform for running application software.</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="component:Software" />
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="SystemSoftware" type="SystemSoftware"></xs:element>
</xs:schema>