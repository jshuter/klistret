<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:si="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.springframework.org/schema/integration 
		http://www.springframework.org/schema/integration/spring-integration-2.0.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

	<!-- Integration CRUD channel (publish subscribe) -->
	<si:publish-subscribe-channel id="crudIntegrationChannel" />

	<!-- Core subscribers -->
	<si:service-activator input-channel="crudIntegrationChannel"
		ref="cascadeRelations" method="receive" />

	<bean id="cascadeRelations"
		class="com.klistret.cmdb.aspect.crud.delete.CascadeRelations">
		<property name="relationService" ref="relationService" />
	</bean>

	<!-- Integration CRUD functions (EDA) and the AOP helper for Core publishers -->
	<bean id="elementIntegration"
		class="com.klistret.cmdb.aspect.crud.ElementIntegration">
		<property name="channel" ref="crudIntegrationChannel" />
	</bean>

	<aop:config>
		<aop:aspect ref="elementIntegration">
			<aop:pointcut id="readPointcut"
				expression="execution(com.klistret.cmdb.ci.pojo.Element com.klistret.cmdb.service.ElementService.get(Long)) and args(id)" />
			<aop:pointcut id="deletePointcut"
				expression="execution(com.klistret.cmdb.ci.pojo.Element com.klistret.cmdb.service.ElementService.delete(Long)) and args(id)" />
			<aop:pointcut id="updatePointcut"
				expression="execution(com.klistret.cmdb.ci.pojo.Element com.klistret.cmdb.service.ElementService.update(com.klistret.cmdb.ci.pojo.Element)) and args(element)" />
			<aop:pointcut id="createPointcut"
				expression="execution(com.klistret.cmdb.ci.pojo.Element com.klistret.cmdb.service.ElementService.create(com.klistret.cmdb.ci.pojo.Element)) and args(element)" />

			<aop:after-returning pointcut-ref="readPointcut"
				method="read" returning="element" />
			<aop:after-returning pointcut-ref="deletePointcut"
				method="delete" returning="element" />
			<aop:after-returning pointcut-ref="updatePointcut"
				method="update" />
			<aop:after-returning pointcut-ref="createPointcut"
				method="create" />
		</aop:aspect>
	</aop:config>
</beans>