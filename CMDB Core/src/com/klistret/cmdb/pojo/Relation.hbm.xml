<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping package="com.klistret.cmdb.pojo">

	<class name="Relation" table="RELATION" entity-name="Relation">

		<id name="id" type="long">
			<column name="RELATIONID" sql-type="INTEGER" />
			<generator class="identity"></generator>
		</id>

		<many-to-one name="type" entity-name="RelationType" lazy="false"
			foreign-key="FK_TYPE_REL" index="RELATION_FK RELATION_SK">
			<column name="RELATIONTYPEID" sql-type="INTEGER"
				not-null="true" />
		</many-to-one>

		<many-to-one lazy="false" name="source" entity-name="Element"
			foreign-key="FK_REL_SOURCE" index="SOURCE_REL_FK" insert="false"
			update="false">
			<column name="SOURCEID" sql-type="INTEGER" not-null="true" />
		</many-to-one>

		<many-to-one lazy="false" name="destination"
			entity-name="Element" foreign-key="FK_REL_DEST" index="DEST_REL_FK"
			insert="false" update="false">
			<column name="DESTINATIONID" sql-type="INTEGER"
				not-null="true" />
		</many-to-one>

		<property name="fromTimeStamp" type="timestamp">
			<column name="FROMTIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="toTimeStamp" type="timestamp">
			<column name="TOTIMESTAMP" />
		</property>

		<property name="createId">
			<column name="CREATEID" length="10" />
		</property>

		<property name="createTimeStamp" type="timestamp">
			<column name="CREATETIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="updateTimeStamp" type="timestamp">
			<column name="UPDATETIMESTAMP" not-null="true"
				default="current timestamp" />
		</property>

		<property name="configuration">
			<column name="CONFIGURATION" not-null="true" sql-type="XML" />
			<type
				name="com.klistret.cmdb.utility.hibernate.JAXBUserType">
				<param name="baseTypes">com.klistret.cmdb.Base</param>
				<param name="assignablePackages">
					com/klistret/cmdb
				</param>
			</type>
		</property>
	</class>

</hibernate-mapping>