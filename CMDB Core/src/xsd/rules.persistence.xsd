<schema xmlns="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.klistret.com/cmdb/ci/persistence"
	xmlns:persistence="http://www.klistret.com/cmdb/ci/persistence"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xs:complexType name="PersistenceRules">
		<xs:annotation>
			<xs:documentation>
				Persistence identification rules based on properties
				(inheritance allowed)
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="Criterion" type="persistence:Criterion"
				maxOccurs="unbounded">
			</xs:element>
			<xs:element name="Rule" type="persistence:Rule"
				maxOccurs="unbounded">
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="Criterion">
		<xs:annotation>
			<xs:documentation>Persistence criterion</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="Expressions" type="xs:string"
				minOccurs="1" maxOccurs="unbounded">
			</xs:element>
		</xs:sequence>
		<xs:attribute name="Name" type="xs:string"></xs:attribute>
	</xs:complexType>


	<xs:complexType name="Rule">
		<xs:annotation>
			<xs:documentation></xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="Exclusions" type="xs:string" minOccurs="0"
				maxOccurs="unbounded">
			</xs:element>
			<xs:element name="QName" type="xs:string" minOccurs="1"
				maxOccurs="1">
			</xs:element>
			<xs:element name="Criterion" type="xs:string"
				minOccurs="1" maxOccurs="1">
			</xs:element>
		</xs:sequence>
		<xs:attribute name="Order" type="xs:int" use="optional"></xs:attribute>
	</xs:complexType>

</schema>