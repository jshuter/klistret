<schema xmlns="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://www.klistret.com/cmdb"
	xmlns:cmdb="http://www.klistret.com/cmdb"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">

	<xs:simpleType name="Name">
		<xs:annotation>
			<xs:documentation>
				Name given to the base instance (usually human readable)
			</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="Namespace">
		<xs:annotation>
			<xs:documentation>
				Namespace associated with the base instance allowing for
				segregation of data into collections (instances may not
				be unique across namespaces)
			</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="Tag">
		<xs:annotation>
			<xs:documentation>
				A non-hierarchical keyword or term assigned to a base
				instance. Tags enrich search criteria and may be
				dynamically applied by users.
			</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="Version">
		<annotation>
			<documentation>
				Keeps track of incrementally different versions of base
				instances
			</documentation>
		</annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="Description">
		<annotation>
			<documentation>
				Description of the base instance (human readable)
			</documentation>
		</annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:simpleType name="Annotation">
		<xs:annotation>
			<xs:documentation>
				Notes or shorter comments placed on the base instance
			</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string" />
	</xs:simpleType>

	<xs:complexType name="Ownership">
		<xs:choice>
			<xs:element name="Name" type="xs:string">
				<xs:annotation>
					<xs:documentation>
						Ownership is responsibility over the base
						instance
					</xs:documentation>
				</xs:annotation>
			</xs:element>
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="Base" abstract="true">
		<xs:sequence>
			<xs:element name="Name" type="cmdb:Name" maxOccurs="1"></xs:element>
			<xs:element name="Namespace" type="cmdb:Namespace"
				maxOccurs="1">
			</xs:element>
			<xs:element name="Tag" type="cmdb:Tag" minOccurs="0"
				maxOccurs="unbounded">
			</xs:element>
		</xs:sequence>
		<xs:attribute name="Watermark" type="xs:string"></xs:attribute>
	</xs:complexType>

	<xs:complexType name="Element" abstract="true">
		<xs:annotation>
			<xs:documentation>
				Root CI (abstract) defining common CI characteristics
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="cmdb:Base">
				<xs:sequence>
					<xs:element name="Ownership" type="cmdb:Ownership"
						maxOccurs="1">
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="Element" type="cmdb:Element"></xs:element>

	<xs:complexType name="Relation" abstract="true">
		<xs:annotation>
			<xs:documentation>
				Root association (abstract) between only two CIs
			</xs:documentation>
		</xs:annotation>
		<xs:complexContent>
			<xs:extension base="cmdb:Base" />
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="Relation" type="cmdb:Relation"></xs:element>
</schema>